# clusters/vixens/argocd/apps/argocd.yaml
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: argocd
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    repoURL: https://argoproj.github.io/argo-helm
    chart: argo-cd
    targetRevision: "7.3.1"
    helm:
      values: |
        server:
          # --- NOUVELLE SECTION POUR CONTRÔLER LE SERVICE LUI-MÊME ---
          service:
            # Nous définissons le port principal du service sur 80 (HTTP)
            port: 80
            # Nous désactivons le port HTTPS en lui donnant une valeur vide.
            # Le chart ne créera ainsi pas de port 443 sur le service.
            httpsPort: ""

          ingress:
            enabled: true
            ingressClassName: traefik
            hostname: argocd.truxonline.com
            annotations:
              cert-manager.io/cluster-issuer: "letsencrypt-gandi-prod"
              traefik.ingress.kubernetes.io/router.entrypoints: websecure
              traefik.ingress.kubernetes.io/router.tls: "true"
            # Nous ne spécifions PLUS les paths ici.
            # Le chart va intelligemment utiliser le seul port disponible sur le service,
            # celui que nous avons défini ci-dessus.
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      
      