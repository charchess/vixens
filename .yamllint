---
# Ne pas utiliser "extends" si vous personnalisez tout
extends: default

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

rules:
  # ============ ERREURS CRITIQUES ============
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
    level: error

  key-duplicates:
    level: error

  # ============ WARNINGS ============
  line-length:
    max: 80
    allow-non-breakable-words: true
    level: warning

  trailing-spaces:
    level: warning

  new-lines:
    type: unix
    level: warning

  # ============ DÉSACTIVÉES ============
  # Syntaxe CORRECTE pour désactiver :
  comments: disable
  comments-indentation: disable
  brackets: disable
  truthy: disable 
