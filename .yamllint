extends: default

ignore:
  - .github/

rules:
  line-length:
    max: 120
    level: warning
  
  document-start:
    present: false
  
  comments:
    min-spaces-from-content: 1
  
  trailing-spaces:
    level: error
  
  new-line-at-end-of-file:
    level: error
  
  brackets:
    level: warning
  
  empty-lines:
    max: 2
